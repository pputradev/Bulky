@model IEnumerable<Product>

<div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card borderr-0 p-3 shadow border-top border-5 rounded">
						<img style="width:100%; height:317px" src="@product.ImageURL" class="card-img-top rounded" alt="Alternate Text" />
						<div class="card-body pb-0">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
								<p class="card-title text-warning text-center">by <b>@product.Author</b></p>
							</div>
							<div class="pl-1">
								<p class="text-dark opacity-75  text-center mb-0">Listed Price:<span class="text-decoration-line-through">@product.Price.ToString("c")</span></p>
							</div>
							<div class="pl-1">
								<p class="text-dark opacity-75  text-center">As Low as:<span>@product.Price100.ToString("c")</span></p>
							</div>
						</div>
						<div class="button">
							<a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>

